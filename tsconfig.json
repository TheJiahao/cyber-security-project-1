{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "ES2022",
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "Bundler",
    "noPropertyAccessFromIndexSignature": false
  }
}
